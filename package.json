  "bugs": {
    "url": "https://github.com/ronik-design/vanillajs-dom/issues"
  },
  "homepage": "https://github.com/ronik-design/vanillajs-dom#readme",
  "devDependencies": {
    "babel": "^5.8.29",
    "eslint": "^1.7.3",
    "eslint-config-defaults": "^7.0.1",
    "eslint-plugin-filenames": "^0.1.2",
    "rollup": "^0.20.2"
